<div class="container">
  <div class="mt-5">
    <h1>UPCOMING SESSIONS</h1>
  </div>

  <div class="mt-5">
    <h4><em>Filter (Date/time, programming language, interview language, experience...)</em></h4>
  </div>

  <h3 class="mt-5">Today</h3>
    <div class="row justify-content-start">
      <% @interviews.each do |interview| %>
        <% if interview.time.today? %>
          <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <%= render partial: 'shared/card-index', locals: { interview: interview } %>
          </div>
        <% end %>
      <% end %>
    </div>

  <h3 class="mt-5">Tomorrow</h3>
    <div class="row justify-content-start">
      <% @interviews.each do |interview| %>
        <% if interview.time.strftime("%Y-%m-%d") == Date.tomorrow.to_s %>
          <div class="col-3">
            <%= render partial: 'shared/card-index', locals: { interview: interview } %>
          </div>
        <% end %>
      <% end %>
    </div>

  <h3 class="mt-5">In the Future</h3>
    <div class="row justify-content-start">
      <% @interviews.each do |interview| %>
        <% if interview.time >= Date.tomorrow %>
          <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <%= render partial: 'shared/card-index', locals: { interview: interview } %>
          </div>
        <% end %>
      <% end %>
    </div>
</div>

