<div class="container">
  <div>
    <h1>UPCOMING SESSIONS</h1>
  </div>

  <br>
  <div class="row justify-content-start">

      <%= simple_form_for interviews_path, method: :get, wrapper: :inline_form, html: {class: "form-inline w-100"} do |f| %>
        <%= text_field_tag :query, params[:query], class: "col-4 mr-sm-2 form-control", placeholder: "Search..." %>
        <%= f.input :focus, as: :select, :collection => ['Ruby', 'JavaScript', 'HTML', 'CSS', 'PHP', 'Python', 'Java', 'C++', 'C#', 'Agora', 'Curl'], input_html: { class: "col-2 mr-sm-2" }, prompt: "Focus" %>
        <%= f.input :experience, :collection => ['Beginner', 'Medium Level', 'Senior Level', 'Expert'], input_html: { class: "col-2 mr-sm-2" }, prompt: "Experience" %>
        <%= f.input :interview_language, :collection => ['english', 'german', 'french', 'spanish'], input_html: { class: "col-2 mr-sm-2" }, prompt: "Language" %>
        <%= f.button :submit, "Search!", class: "btn btn-success p-2 col-2" %>
      <% end %>
  </div>
  <br>

  <h2>Today</h2>
    <div class="row justify-content-start">
      <% @interviews.each do |interview| %>
        <% if interview.time.today? %>
          <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <%= render partial: 'shared/card-index', locals: { interview: interview } %>
          </div>
        <% end %>
      <% end %>
    </div>
  <br>
  <h2>Tomorrow</h2>
    <div class="row justify-content-start">
      <% @interviews.each do |interview| %>
        <% if interview.time.strftime("%Y-%m-%d") == Date.tomorrow.to_s %>
          <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <%= render partial: 'shared/card-index', locals: { interview: interview } %>
          </div>
        <% end %>
      <% end %>
    </div>
  <br>
  <h2>In the Future</h2>
    <div class="row justify-content-start">
      <% @interviews.each do |interview| %>
        <% if interview.time.strftime("%Y-%m-%d") > Date.tomorrow.to_s %>
          <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <%= render partial: 'shared/card-index', locals: { interview: interview } %>
          </div>
        <% end %>
      <% end %>
    </div>
</div>

