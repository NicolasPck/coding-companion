<div class="form d-flex align-items-center" style="height: calc(100vh - 56px)">

  <div class="form-text font-weight-bold">
    <h2>Decide yourself <br> when you want to practice!</h2>
    <p class="text-muted">Create a new interview others can join üëç</p>
  </div>

  <div class="#">
    <div class="row">
      <div class="col-6.05">
        <div class="interview-form shadow-sm bg-white rounded px-5 py-3">
          <div id='interview-dates' data-unavailable="<%= @interview.unavailable_dates.to_json %>">
            <%= simple_form_for [@interview] do |f| %>
              <br>
              <div class="d-flex flex-row">
                <div class="flex-item mr-2"><%= f.input :start_time, as: :string %></div>
                <br>
                <div class="flex-item"> <%= f.input :end_time, as: :string %></div>
                <br>
              </div>
              <%= f.input :focus, :collection => ['HTML', 'CSS', 'JavaScript', 'Ruby'] %>
              <br>
              <%= f.input :experience, :collection => ['Beginner', 'Medium Level', 'Senior Level', 'Expert']%>
              <br>
              <%= f.input :interview_language, :collection => ['German', 'Spanish', 'French', 'English'] %>
              <br>
              <div class="buttons-form d-flex justify-content-between">
                <%= link_to "‚Üê Go back", :back, class: "btn btn-secondary" %>
                <%= f.button :submit, "‚Üí Submit", class: "btn btn-primary" %>
              </div>
              <br>
            <% end %>
          </div>
        </div>  
      </div>
    </div>
  </div>
</div>
