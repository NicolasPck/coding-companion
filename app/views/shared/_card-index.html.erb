<div class="card bg-white rounded shadow-sm m-4" style="width: 18rem; height: 14rem">
  <div class="d-flex align-items-center w-100 mt-3">
    <div class= "mr-auto">
      <h5><%= link_to interview.user.nickname, interview_path(interview) %></h5>
    </div>
    <div class="mr-2">
      <% if interview.interview_language == "french" %>
        <img src="../../assets/images/france.png" alt="FR">
      <% elsif interview.interview_language == "english" %>
        <img src="../../assets/images/united-kingdom.png" alt="EN">
      <% elsif interview.interview_language == "german" %>
        <img src="../../assets/images/germany.png" alt="DE">
      <% elsif interview.interview_language == "spanish" %>
        <img src="../../assets/images/spain.png" alt="ES">
      <% else %>
        <img src="../../assets/images/spain.png" alt="ES">
      <% end %>
    </div>
    <div>
      <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
    </div>
  </div>
  <div class="d-flex justify-content-start align-items-center w-100 mt-3">
    <div>
      <i class="far fa-clock mr-2"></i>
    </div>
    <div class="badge badge-light flex-fill ml-2 p-2">
      <%= interview.time.strftime("%a %e.%m.%y | %l:%M") %>
    </div>
  </div>
  <div class="d-flex justify-content-start align-items-center w-100" style="height: 5rem">
    <div>
      <i class="fas fa-terminal mr-2"></i>
    </div>
    <div>
      <h2 class="badge badge-success mx-2 p-2">Ruby</h2>
    </div>
    <div>
      <h2 class="badge badge-danger mx-2 p-2">JS</h2>
    </div>
    <div>
      <h2 class="badge badge-warning mx-2 p-2">CSS</h2>
    </div>
  </div>
  <div class="d-flex justify-content-center align-items-start w-100">
    <%= link_to "â†’ Confirm booking", dashboard_index_path, class: "btn btn-primary" %>
  </div>
</div>
