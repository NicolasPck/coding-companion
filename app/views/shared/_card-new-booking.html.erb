<div class="bg-white rounded shadow-sm p-3" style="width: 20rem">

  <!-- Nickname, flag, avatar -->
  <div class="d-flex align-items-center w-100">
    <div class= "mr-auto mt-2">
      <h5><%= link_to interview.user.nickname, interview_path(interview) %></h5>
    </div>
    <div class="mr-2">
      <% if interview.interview_language == "french" %>
        <%= cl_image_tag("france_j1bcee.png", width: 30, height: 30) %>
      <% elsif interview.interview_language == "english" %>
        <%= cl_image_tag("united-kingdom_vcgmov.png", width: 30, height: 30) %>
      <% elsif interview.interview_language == "german" %>
        <%= cl_image_tag("germany_uacttu.png", width: 30, height: 30) %>
      <% elsif interview.interview_language == "spanish" %>
        <%= cl_image_tag("spain_v7zi4g.png", width: 30, height: 30) %>
      <% else %>
        <%= cl_image_tag("united-kingdom_vcgmov.png", width: 30, height: 30) %>
      <% end %>
    </div>
    <div>
      <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
    </div>
  </div>

  <!-- Time -->
  <div class="d-flex justify-content-start align-items-center w-100 mt-3">
    <div style="width: 30px">
      <h4 class= "text-center text-secondary mt-1 mb-2 mr-2"><i class="far fa-clock"></i></h4>
    </div>
    <div class="flex-fill ml-2 p-2 mb-2 text-muted rounded" style="background-color: rgba(155, 164, 180, 0.3);">
      <h6 class="font-weight-light mb-0"><%= interview.time.strftime("%a %e.%m.%y | %H:%M") %> - <%= interview.time.hour + 2 %>:<%= interview.time.strftime("%M") %></h6>
    </div>
  </div>

  <!-- Coding language -->
  <div class="d-flex justify-content-start align-items-center w-100">
    <div style="width: 30px">
      <h5 class= "text-center text-secondary mt-1 mb-1 mr-2"><i class="fas fa-terminal"></i></h5>
    </div>
    <!-- <div>
      <h2 class="badge badge-success mx-2 p-2 text-success text-center" style="display:inline-block; width:45px; background-color: rgba(30, 221, 184, 0.3)">JS</h2>
    </div> -->
    <div>
      <h6 class="badge badge-danger mx-2 p-2 text-danger text-center" style="background-color: rgba(253, 16, 21, 0.3); font-size: 16px;">Ruby</h6>
    </div>
    <!-- <div>
      <h2 class="badge badge-warning mx-2 p-2 text-warning text-center" style="display:inline-block; width:45px; background-color: rgba(230, 126, 34, 0.3)">CSS</h2>
    </div> -->
  </div>

  <!-- Bio -->
  <div class="d-flex justify-content-start align-items-top w-100">
    <div style="width: 30px">
      <h5 class= "text-center text-secondary mt-1 mb-1 mr-2"><i class="far fa-address-card"></i></h5>
    </div>
    <div class="ml-2 p-2 mb-2 text-muted rounded" style="background-color: rgba(155, 164, 180, 0.3); font-size: 12px">
      <h6 class="font-weight-light mb-0"><%= interview.user.bio %></h6>
    </div>
  </div>

  <!-- Action buttons -->
  <div class="d-flex align-items-start justify-content-between mt-3">
    <%= link_to "← Go Back", :back, class: "btn btn-secondary" %>
    <%= link_to "→ Confirm booking", interview_bookings_path(interview), method: :post, class: "btn btn-primary" %>
  </div>
</div>
